                            </div>
                        </div>

                        <!-- Sub Category Field -->
                        <div class="col-4">
                            <label class="form-label">Sub Category</label>
                            <div class="d-flex gap-2">
                                <div class="d-flex w-50">
                                    <select class="form-select w-100 reportsSelectbox" id="subCategorySelect"></select>
                                    <button type="button" class="btn btn-outline-secondary ml-2" id="addSubCategoryBtn">+</button>
                                </div>
                                <input type="text" class="form-control w-50 d-none reportsSelectbox" id="newSubCategoryInput" placeholder="Enter Sub Category" />
                            </div>
                        </div>



                        <!-- Create Button -->
                        <div class="col-1 d-flex align-items-end">
                            <button class="btn btn-primary w-100" id="createBtn" disabled>Create</button>
                        </div>
                    </div> *@

                    <form id="antiForgeryForm" method="post" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>


                    <!-- Slab Table -->
                    <div class="mb-3 d-none p-2" id="slabTableContainer">
                        <table class="table table-bordered table-striped" id="slabTable">
                            <thead id="tableHead"></thead>
                            <tbody id="tableBody" class="position-relative top-10"></tbody>
                        </table>
                    </div>

                    <!-- Buttons -->

                    <div class="row p-2 justify-content-end">
                        <div class="col-md-2 userDeatilsBtn">
                            <div class="form-group dtrBtn">
                                <button type="reset" class="btn btn-block btn-danger trigger-btn">
                                    @* @HtmlLocalizer["CancelButton_Label"] *@
                                </button>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <button type="button" id="saveBtn" class="btn btn-block btn-success trigger-btn">Save</button>
                        </div>
                    </div>
                </div>

                <!-- Toast -->
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body">Slab Successfully Created</div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div><!-- end of row -->
</div>
<script>
    window.prefillModel = @Html.Raw(Json.Serialize(Model));
    window.isEditMode = @((Model != null && Model.SlabTariffId > 0).ToString().ToLower());
</script>

@if (Model != null && Model.SlabTariffId > 0)
{
    <script src="~/HES/js/slabsEdit.js"></script>
}
else
{
    <script src="~/HES/js/slabsandtariffs.js"></script>
}


