 @model Admin.Infrastructure.Shared.Models.SlabsDetailsModel

@{
    var input = Model; // Shortcut to avoid repeating
}
@{
    // Layout = "~/Views/Shared/_HESLayout.cshtml";
    Layout = "_Layout"; // Razor will find it in Views/Shared automatically

    ViewData["Title"] = "SlabsAndTariffs";

}
<!-- Your existing setup and styling -->
<link rel="stylesheet" type="text/css" href="~/HES/css/slabsandtariffs.css">

<div class="container-fluid">
    <div class="row currentPage">
        <div class="col-sm-6">
            <div>Slabs and Tariffs Details</div>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("ConsumerList", "Consumer")">CIS</a></li>
                <li>></li>
                <li class="active">Slabs & Tariffs</li>
            </ol>
        </div>
    </div>

    <div class="row pb-5">
        <div class="col-sm-12">
            <div class="col-md-3">

                <button type="button" class="btn btn-outline-secondary" onclick="history.back();">Back</button>
            </div>
            <div class="fe-box">
                <div class="fe-box-heading">Add Slabs & Tariffs</div>
                <div class="fe-box-content">

                    <!-- Category, Subcategory, Supply Type, Create Button -->
                    <!-- Header -->

                    <div class="d-flex mb-3 row p-3">


                        <!-- Supply Type Field -->
                        @*    <div class="col-1">
                            <label class="form-label">Supply Type</label>
                            <select class="form-select reportsSelectbox" id="supplyTypeSelect">
                                <option value="LT" selected>LT</option>
                                <option value="HT">HT</option>
                            </select>
                        </div> *@
                     

                        <!-- Category Field -->
                        <div class="col-4">
                            <label class="form-label">Category</label>
                            <div class="d-flex gap-2">
                                <!-- Dropdown + Button (left 50%) -->
                                <div class="d-flex w-50">
                                    <select class="form-select w-100 reportsSelectbox" id="categorySelect"></select>
                                    <button type="button" class="btn btn-outline-secondary ml-2" id="addCategoryBtn">+</button>
                                </div>
                                <!-- Text input (right 50%) initially hidden -->
                                <input type="text" class="form-control w-50 d-none reportsSelectbox" id="newCategoryInput" placeholder="Enter Category" />
                            </div>
                        </div>

                        <!-- Sub Category Field -->
                        <div class="col-5">
                            <label class="form-label">Sub Category</label>
                            <div class="d-flex gap-2">
                                <div class="d-flex w-50">
                                    <select class="form-select w-100 reportsSelectbox" id="subCategorySelect"></select>
                                    <button type="button" class="btn btn-outline-secondary ml-2" id="addSubCategoryBtn">+</button>
                                </div>
                                <input type="text" class="form-control w-50 d-none reportsSelectbox" id="newSubCategoryInput" placeholder="Enter Sub Category" />
                            </div>
                        </div>

                        <!-- Supply Type Field -->
                        <div class="col-1">
                            <label class="form-label">Supply Type</label>
                            <select id="supplyTypeSelect" name="supplyType" class="form-select w-100 reportsSelectbox">
                                <option value="">Select Supply Type</option>
                                <option value="LT">LT</option>
                                <option value="HT">HT</option>
                            </select>
                        </div>

                        <!-- Create Button -->
                        <div class="col-1 d-flex align-items-end">
                            <button class="btn btn-primary w-100" id="createBtn" disabled>Create</button>
                        </div>
                    </div>



                    @*  <div class="d-flex mb-3 row p-2">

                        <!-- Supply Type Field -->
                        <div class="col-3">
                            <label>Supply Type</label>
